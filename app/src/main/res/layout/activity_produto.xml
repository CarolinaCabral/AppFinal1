<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carolinacabral.realm.ProdutoActivity">

    <ListView
        android:id="@+id/listId"
        android:layout_width="365dp"
        android:layout_height="377dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_above="@+id/btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:onClick="callAddProduto"
        android:text="Adicionar"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="447dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/listId"
        android:layout_alignStart="@+id/listId" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:text="Lista" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txtResultado"
        android:layout_toStartOf="@+id/txtResultado"
        android:text="OlÃ¡," />

    <Button
        android:id="@+id/btnPago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/listId"
        android:layout_alignRight="@+id/listId"
        android:layout_below="@+id/listId"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:onClick="callProdutoPago"
        android:text="Produtos Pagos" />
</RelativeLayout>
